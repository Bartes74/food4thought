{
  "name": "food4thought",
  "version": "1.0.0",
  "type": "module",
  "description": "Lokalna aplikacja do słuchania spersonalizowanych podcastów edukacyjnych",
  "main": "src/server/index.js",
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "globals": {
      "jest": true
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/server/**/*.js",
      "!src/server/**/*.test.js",
      "!src/server/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server --passWithNoTests",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server/__tests__/integration.test.js --verbose",
    "test:simple": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server/__tests__/simple.integration.test.js --verbose",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server/__tests__ --testPathIgnorePatterns=integration.test.js --passWithNoTests",
    "test:frontend": "echo 'Frontend tests not implemented yet'",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch --testPathPattern=src/server",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server --coverage --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
                  "test:e2e:debug": "playwright test --debug",
              "test:e2e:report": "playwright show-report",
              "test:e2e:performance": "node src/client/__tests__/e2e/test-performance.js",
              "test:e2e:fast": "playwright test --project=chromium --workers=4",
              "test:e2e:all-browsers": "playwright test --project=chromium --project=firefox --project=webkit",
              "start:test": "concurrently \"npm run dev\" \"npm run client\" --kill-others"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.17",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7"
  }
}
