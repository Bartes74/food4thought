{
  "name": "food4thought",
  "version": "2.2.0",
  "type": "module",
  "description": "Lokalna aplikacja do słuchania spersonalizowanych podcastów edukacyjnych",
  "main": "src/server/index.js",
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "transform": {},
    "globals": {
      "jest": true
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "collectCoverageFrom": [
      "src/server/**/*.js",
      "!src/server/**/*.test.js",
      "!src/server/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testEnvironmentOptions": {
      "NODE_ENV": "test"
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(node-fetch|fetch-blob)/)"
    ],
    "detectOpenHandles": true,
    "forceExit": true
  },
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server --passWithNoTests",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server/__tests__/integration.test.js --verbose",
    "test:simple": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server/__tests__/simple.integration.test.js --verbose",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server/__tests__ --testPathIgnorePatterns=integration.test.js --passWithNoTests",
    "test:frontend": "echo 'Frontend tests not implemented yet'",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch --testPathPattern=src/server",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=src/server --coverage --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:performance": "node src/client/__tests__/e2e/test-performance.js",
    "test:e2e:fast": "playwright test --project=chromium --workers=4",
    "test:e2e:all-browsers": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:e2e:autoplay": "echo 'autoplay e2e tests removed'",
    "test:e2e:accessibility": "playwright test --grep 'dostępność'",
    "test:e2e:api": "playwright test --grep 'API'",
    "test:e2e:notifications": "playwright test --grep 'powiadomienia'",
    "test:autoplay": "echo 'backend autoplay tests removed'",
    "test:audioUrl": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=episodes.integration.test.js --testNamePattern='audioUrl'",
    "test:completion-rate": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=user-stats.integration.test.js --testNamePattern='average_completion_rate'",
    "test:admin-stats": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=admin.integration.test.js --testNamePattern='stats'",
    "test:achievements": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=integration.test.js --testNamePattern='achievements'",
    "start:test": "concurrently \"npm run dev\" \"npm run client\" --kill-others",
    "test:register": "node test-registration.js",
    "test:register:batch": "node test-registration-batch.js",
    "check:tokens": "node check-verification-tokens.js",
    "test:users": "node test-user-management.js",
    "test:notifications": "node test-notifications.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@vitejs/plugin-react": "^4.3.4",
    "audit-ci": "^7.0.0",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.2",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "sqlite": "^5.1.1",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7"
  }
}
